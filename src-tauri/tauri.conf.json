{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Minik",
  "version": "0.1.0",
  "identifier": "com.minik.kanban",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Minik",
        "width": 600,
        "height": 60,
        "resizable": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "center": false,
        "x": 100,
        "y": 50
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "remote": {
            "urls": ["https://tauri.localhost"]
          },
          "local": true,
          "windows": ["main"],
          "permissions": [
            "shell:allow-open",
            "core:window:allow-start-dragging",
            "core:window:default"
          ]
        }
      ]
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}